<%- include("partials/_header") %>

<form action="/" method="get">
    <button class="btn btn-info ml-3" type="submit">ir al inicio</button>
</form>
<form action="/comentarios" method="get">
    <button class="btn btn-info ml-3" type="submit">crear comentario</button>
</form>

<table class="table table-dark table-bordered table-hover ml-3">
    <thead>
        <tr>
            <td>NOMBRE</td>
            <td>EMAIL</td>
            <td>TIPO DE CLIENTE</td>
            <td>COMENTARIO</td>
            <td>FECHA</td>
        </tr>
    </thead>
    <tbody>
        <% if (data) { %> <% for(var i = 0; i < data.length;
        i++) {
        %>
        <tr>
            <td><%= data[i].nombre %></td>
            <td><%= data[i].direccion %></td>
            <td><%= data[i].tipo %></td>
            <td><%= data[i].comentario %></td>
            <td><%= data[i].fecha %></td>
        </tr>
        <% } %> <% } %>
    </tbody>
</table>

<%- include("partials/_footer") %>